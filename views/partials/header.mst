<html>

<head>
    {{#pageTitle}}
        <title>Site - {{pageTitle}}</title>
    {{/pageTitle}}

    {{^pageTitle}}
        <title>Site - {{h.defaultPageTitle}}</title>
    {{/pageTitle}}
    
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Raleway:200,300,400,600,700,300i,400i,600i,700i,|Montserrat:200,300,300i,400,400i,600,600i,700,700i,&amp;subset=latin" media="all">
    <link rel="stylesheet" type="text/css" href="/assets/css/template.css">

    <script type="text/javascript" src="/assets/js/mainFunctions.js"></script>
</head>

<body>
    <header>
        <div class="container">
            <div class="nav">
                <div class="navTitle">
                    Blog
                </div>
                <div class="navNav">
                    <nav>
                        <ul>
                            {{#h.menu}}
                                <li>
                                    <a href="{{slug}}">{{name}}</a>
                                </li>
                            {{/h.menu}}
                        </ul>
                    </nav>
                </div>
                <div class="divUser">
                    {{^user}}
                        <div>
                            <a href="/users/login">Login</a>
                        </div>
                    {{/user}}
                </div>
            </div>
        </div>

        {{#flashes}}
            {{#success}}
                <div class="divWarning success">{{.}}</div>
            {{/success}}

            {{#error}}
                <div class="divWarning error">{{.}}</div>
            {{/error}}

            {{#info}}
                <div class="divWarning info">{{.}}</div>
            {{/info}}
        {{/flashes}}
    </header>
<html>

<head>
    {{#pageTitle}}
        <title>Site - {{pageTitle}}</title>
    {{/pageTitle}}

    {{^pageTitle}}
        <title>Site - {{h.defaultPageTitle}}</title>
    {{/pageTitle}}

    <link rel="stylesheet" href="/assets/css/template.css">
</head>

<body>
    <header>
        <ul>
            {{#h.menu}}
                <li>
                    <a href="{{slug}}">{{name}}</a>
                </li>
            {{/h.menu}}
        </ul>
    </header>

    {{#flashes}}
        {{#success}}
            <div class="warning">{{.}}</div>
        {{/success}}

        {{#error}}
            <div class="warning">{{.}}</div>
        {{/error}}

        {{#info}}
            <div class="warning">{{.}}</div>
        {{/info}}
    {{/flashes}}
<html>

<head>
    {{#pageTitle}}
        <title>Site - {{pageTitle}}</title>
    {{/pageTitle}}

    {{^pageTitle}}
        <title>Site - {{h.defaultPageTitle}}</title>
    {{/pageTitle}}

    <link rel="stylesheet" href="/assets/css/template.css">
</head>

<body>
    <header>
        <ul>
            {{#h.menu}}
                <li>
                    <a href="{{slug}}">{{name}}</a>
                </li>
            {{/h.menu}}
        </ul>
    </header>    

    <div style="
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid #ccc;
            font-size: 14px;
            padding: 10px;">
        <span>
            {{#user}}
                Olá, <a style="text-decoration: underline;" href="/profile">{{user.name}}</a>. <small><a style="color: gray;" href="/users/logout">Sair</a></small>
            {{/user}}
            {{^user}}
                <a href="/users/login">Faça login</a>
            {{/user}}
        </span>
    </div>    

    {{#flashes}}
        {{#success}}
            <div class="warning success">{{.}}</div>
        {{/success}}

        {{#error}}
            <div class="warning error">{{.}}</div>
        {{/error}}

        {{#info}}
            <div class="warning info">{{.}}</div>
        {{/info}}
    {{/flashes}}